root = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
curly_bracket_next_line  = false
spaces_around_operators  = true
indent_style             = space
indent_size              = 2

[*.js]
quote_type = single

[*.{html,less,css,json}]
quote_type = double

[*.md]
trim_trailing_whitespace = false
